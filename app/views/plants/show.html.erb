<div class="card-plant-show">
  <div class="card-plant-show-top">
    <img src=<%= @plant.image %> alt="plant image">
    <div class = "white-border-card"></div>
  </div>
  <div class="card-plant-show-bottom">
    <h1 class = "mb-3"><%= @plant.name %></h1>
    <p class="mb-4">Taking care of plants requires attention and effort. You can find some general tips for plant care here.
    <a href="https://www.bhg.com/search?q=<%= @plant.name %>"><i class="fa-solid fa-circle-info ms-2"></i></a>
    </p>
    <div class = "d-flex flex-row justify-content-start flex-wrap"><h5 class = "m-0 mb-2">Scientific name : </h5><p class = "mb-3 ps-1"><%= @plant.scientific_name %></p></div>
    <% month = Date.today.strftime("%B") %>
    <div class = "d-flex flex-row justify-content-start flex-wrap"><h5 class = "m-0 mb-3">Frequency :</h5><p class = "mb-3 ps-1">Every <%= @plant.frequency[month.downcase] %> days</div>
    <!--div class = "d-flex flex-row justify-content-start flex-wrap"><h5 class = "m-0 mb-3">Light :</h5><p class = "mb-3 ps-1 mr-2">Requires direct light</p></div-->
    <%= link_to 'Add', new_garden_garden_plant_path(@garden, plant_id: params[:id]), class: 'btns white-btn-show' %>
  </div>
</div>

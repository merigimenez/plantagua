<div class="profile-user">
  <% if @user.photo.key %>
      <%= cl_image_tag @user.photo.key, crop: :fill, class:"profile-user-photo" %>
    <% else %>
      <%= image_tag "User.svg.png", class:"profile-user-photo" %>
    <% end %>
  <div class = "profile-user-bottom">
    <p id = "profile-name"><%= @user.full_name %></p>
    <p><%= @user.email %></p>
    <div class = "profile-user-icons">
      <div class = "profile-user-icon"><i class="fa-solid fa-person-shelter"></i>3</div>
      <div class = "profile-user-icon"><i class="fa-solid fa-seedling"></i>7</div>
      <div class = "profile-user-icon"><i class="fa-solid fa-face-smile"></i>8</div>
    </div>
    <%= link_to "Edit", edit_user_registration_path, class: "btns green-btn"%>
    <!--%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %-->
  </div>
</div>

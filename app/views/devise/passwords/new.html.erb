
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-on-green"}) do |f| %>
  <%= f.error_notification %>
  <h2 class = "header-top-forms">Reset password</h2>
  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send", class: "btns white-btn"%>
  </div>
<% end %>
